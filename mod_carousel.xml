                <field name="slide3_button_text" type="text" default="Read More" label="Slide 3 Button Text" description="The text of the button"></field>
                <field name="slide3_button_link" type="url" default="#" label="Slide 3 Button Link" description="The link of the button"></field>
                <field name="slide3_show_read_more" type="radio"  class="btn-group btn-group-yesno" default="1" label="Slide 3 Show Readmore" description="Choose to show a read more button">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                        
                <field type="spacer" name="myspacer4" label="&lt;h4&gt;Slide 4&lt;/h4&gt;&lt;hr/&gt;" />
                <field name="slide4_heading" type="text" default="Slide 4 Heading" label="Slide 4 Heading" description="The heading for slide 4"></field>
                <field name="slide4_text" type="textarea" default="This is the body text for slide 4. You can change this from inside of the module manager" label="Slide 4 Text" description="The body text for slide 4"></field>
                <!--<field name="slide4_background_image" type="media" directory="sliders" label="Slide 4 Background Image" description="This image should be at least the width of the module" />-->
                <field name="slide4_main_image"  type="media" directory="sliders" label="Slide 4 Main Image" description="This is the main image for this slide. (Demo picture under images/sliders/slider1.jpg)" />
