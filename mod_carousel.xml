                <field name="slide4_show_read_more" type="radio"  class="btn-group btn-group-yesno" default="1" label="Slide 4 Show Readmore" description="Choose to show a read more button">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field> 

                <field type="spacer" name="myspacer5" label="&lt;h4&gt;Slide 5&lt;/h4&gt;&lt;hr/&gt;" />                                                		
                <field name="slide5_heading" type="text" default="Slide 5 Heading" label="Slide 5 Heading" description="The heading for slide 5"></field>
                <field name="slide5_text" type="textarea" default="This is the body text for slide 5. You can change this from inside of the module manager" label="Slide 5 Text" description="The body text for slide 5"></field>
                <!--<field name="slide5_background_image" type="media" directory="sliders" label="Slide 5 Background Image" description="This image should be at least the width of the module" />-->
                <field name="slide5_main_image"  type="media" directory="sliders" label="Slide 5 Main Image" description="This is the main image for this slide. (Demo picture under images/sliders/slider1.jpg)" />
                <field name="slide5_button_text" type="text" default="Read More" label="Slide 5 Button Text" description="The text of the button"></field>
                <field name="slide5_button_link" type="url" default="#" label="Slide 5 Button Link" description="The link of the button"></field>
                <field name="slide5_show_read_more" type="radio"  class="btn-group btn-group-yesno" default="1" label="Slide 5 Show Readmore" description="Choose to show a read more button">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>   
            </fieldset>
        </fields>
    </config>
</extension>
